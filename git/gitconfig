[user]
	name = Nicolas
	email = nddery@gmail.com
	signingkey = 687F56B105B1385D

[core]
  editor = nvim
  excludesfile = ~/.gitignore
  autocrlf = input

[rebase]
  autosquash = true

[pull]
  rebase = false

[push]
  default = simple

[alias]
  fix = "!f() { ${EDITOR} `git diff --name-only`; }; f"
  ctags = !.git/hooks/ctags
  c = commit
  p = push
  b = branch
  s = status -s
  df = diff --color --color-words --abbrev
  l = log --pretty=format:"%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]" --decorate --date=short
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  co = checkout

# Show the diff between the latest commit and the current state
  d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
  lastchange = log -p --follow -n 1

# Common mistakes I make...
  checout = checkout
  chekcout = checkout
  cehckout = checkout
  fethc = fetch
  delete-squashed = "!f() { \
    local targetBranch=${1:-main} \
      && git checkout -q $targetBranch \
      && git branch --no-color --merged | grep -v \"\\*\" | xargs -n 1 git branch -d \
      && git for-each-ref refs/heads/ \"--format=%(refname:short)\" | \
        while read branch; do \
          mergeBase=$(git merge-base $targetBranch $branch) \
          && [[ $(git cherry $targetBranch $(git commit-tree $(git rev-parse $branch^{tree}) -p $mergeBase -m _)) == \"-\"* ]] \
          && git branch -D $branch; \
        done; \
  }; f"

[color]
  ui = always

[merge]
  tool = vimdiff
  conflictstyle = diff3

[mergetool]
  prompt = false
  path = /usr/local/bin/nvim

[diff]
  tool = opendiff
[difftool]
  prompt = false
[difftool "opendiff"]
  cmd = /usr/bin/opendiff \"$LOCAL\" \"$REMOTE\" -merge \"$MERGED\" | cat

[help]
  autocorrect = 1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
  required = true
	process = git-lfs filter-process
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[url "git@github.com:"]
	insteadOf = https://github.com/
